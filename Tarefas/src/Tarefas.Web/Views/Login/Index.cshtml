@{
    Layout = "_Login";
}

@model Tarefas.Web.Models.UsuarioViewModel

<div class="row justify-content-md-center">
    <div class="card-login col-md-4 g-3 p-4 rounded-5">
        <form method="post" class="g-3">
            <h1 class="h3 mb-3 font-weight-normal text-center">
                <img style="width: 150px;" src="https://i.imgur.com/MPlIz0D.png" alt="">
                <div class="font-vibes display-5">RL Planner</div>
            </h1>
            <p class="text-center">Informe seu login e senha para entrar.</p>
            <hr>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group mt-5 mb-3">
                <label asp-for="Email">@Html.DisplayNameFor(model => model.Email)</label>
                <input placeholder="exemplo@email.com" asp-for="Email" class="form-control rounded-pill border border-dark">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-5">
                <label asp-for="Senha">@Html.DisplayNameFor(model => model.Senha)</label>
                <input asp-for="Senha" class="form-control rounded-pill border border-dark">
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>            
            
            <div class="form-group mb-3">
                
                <button type="submit" class="btn btn-primary btn-block mb-4 rounded-pill">Entrar</button>
            
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
